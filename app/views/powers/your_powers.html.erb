<div class="container">
  <br>
  <h1>Your powers</h1>
  <br>
  <br>
  <div class="row">
    <% @powers.each do |power| %>
      <div class="col-3">
        <%= link_to power_path(power) do %>
          <div class="powers-card mb-5">
            <% if power.photo.key %>
              <%= cl_image_tag power.photo.key, class: "card-img-top" %>
            <% else %>
              <img src="https://img.buzzfeed.com/buzzfeed-static/static/2019-02/6/17/campaign_images/buzzfeed-prod-web-01/can-you-guess-which-marvel-superhero-said-these-l-2-19906-1549493548-0_dblbig.jpg?resize=1200:*" alt="" class="card-img-top">
            <% end %>
            <div class="card-body">
              <h5 class="card-title d-flex justify-content-center"><%= power.name %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
